{
  "compilerOptions": {
    "target": "es2018",
    "module": "es2015",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "experimentalDecorators": false,
    "importHelpers": false,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "lib",
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": false,
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "lib": ["es2018"],
    "esModuleInterop": true
  },
  "include": ["src"]
}
