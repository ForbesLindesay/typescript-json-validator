{
	"name": "@rkesters/typescript-json-validator",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"bin": {
		"typescript-json-validator": "./lib/cli.js"
	},
	"files": [
		"lib/"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/rkesters/typescript-json-validator.git"
	},
	"scripts": {
		"test": "jest --no-cache",
		"test:coverage": "pnpm test --coverage",
		"test:watch": "pnpm test --watch",
		"posttest": "tsc --noEmit",
		"clean": "rimraf lib && rimraf src/Example.validator.ts && npx tsc --build --clean",
		"prebuild": "pnpm clean",
		"build": "  npx tsc",
		"build:watch": "pnpm build -w",
		"postbuild": "node lib/usage && node lib/cli src/Example.ts ExampleType && node lib/cli src/DisjointUnionExample.ts --collection && rimraf lib/__tests__ && rimraf src/Example.validator.ts",
		"precommit": "pretty-quick --staged",
		"prepush": "pnpm prettier:diff && pnpm test",
		"prettier": "prettier --ignore-path .gitignore --write './**/*.{js,jsx,ts,tsx}'",
		"prettier:diff": "prettier --ignore-path .gitignore --list-different './**/*.{js,jsx,ts,tsx}'",
		"ci:test": "pnpm prettier:diff && pnpm test",
		"prepublish": "pnpm build"
	},
	"devDependencies": {
		"@types/cross-spawn": "^6.0.0",
		"@types/glob": "^7.1.1",
		"@types/json-stable-stringify": "^1.0.32",
		"@types/lodash": "^4.14.168",
		"@types/minimatch": "^3.0.3",
		"@types/jest": "^27.4.0",
		"@types/koa": "^2.0.48",
		"@types/koa-router": "^7.0.39",
		"@types/node": "17.0.8",
		"@types/rimraf": "3.0.2",
		"ajv": "^8.8.2",
		"ajv-formats": "^2.1.1",
		"husky": "8.0.1",
		"jest": "27.4.7",
		"jest-summary-reporter": "^0.0.2",
		"prettier": "^2.5.1",
		"pretty-quick": "^3.1.3",
		"rimraf": "3.0.2",
		"ts-jest": "27.1.2",
		"ts-node": "10.4.0",
		"tslint": "6.1.3",
		"typescript": "4.5.4"
	},
	"dependencies": {
		"cross-spawn": "7.0.3",
		"glob": "8.0.3",
		"json-stable-stringify": "1.0.1",
		"lodash": "4.17.21",
		"minimatch": "5.1.0",
		"tsconfig-loader": "1.1.0",
		"typescript-json-schema": "0.53.1",
		"yargs": "17.5.1"
	},
	"peerDependencies": {
		"ajv": "^8.8.2",
		"ajv-formats": "^2.1.1"
	},
	"version": "3.0.3"
}
